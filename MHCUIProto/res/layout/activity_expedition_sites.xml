<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context=".ExpeditionSitesActivity" >

	<com.esri.android.map.MapView
	android:id="@+id/mapExpeditionSites"
	android:layout_width="match_parent"
	android:layout_height="0dp"
	android:layout_weight="3"
	initExtent = "-1.3296373526814876E7 3930962.41823043 -1.2807176545789773E7 4201243.7502468005">
	</com.esri.android.map.MapView>

	<ListView
	    android:id="@+id/listVWExpeditionSites"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_marginTop="5dp"
	    android:layout_weight="3"
	    android:entries="@array/ui_array" >

	</ListView>
        
</LinearLayout>
