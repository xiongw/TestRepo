<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.esri.mhc.uiproto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.esri.mhc.uiproto.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.esri.mhc.uiproto.ViewPagerActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.esri.mhc.uiproto.TabListActivity"
            android:label="@string/title_activity_tab_list" >
        </activity>
        <activity
            android:name="com.esri.mhc.uiproto.ExpeditionActivity"
            android:label="@string/title_activity_expedition" >
        </activity>
        <activity
            android:name="com.esri.mhc.uiproto.ExpeditionSitesActivity"
            android:label="@string/title_activity_expedition_sites" >
        </activity>
        <activity
            android:name="com.esri.mhc.uiproto.VideoActivity"
            android:label="@string/title_activity_video" >
        </activity>
        <activity
            android:name="com.esri.mhc.uiproto.RecordVideoActivity"
            android:label="@string/title_activity_record_video" >
        </activity>
        <activity
            android:name="com.esri.mhc.uiproto.ShareVideoActivity"
            android:label="@string/title_activity_share_video" >
        </activity>
    </application>

</manifest>